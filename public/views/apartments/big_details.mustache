<div id="details_centering">
	<div id="details_rightflow">
		<div id="details">
			<a href="" class="view_indicator slide_right_out"></a>
		
			<div class="left_column">
        {{#images}}
          <img src="{{middle}}" />
        {{/images}}
				
				<a href="" title="Bookmark apartment" class="check_link action_link textlink left remember_this">Bookmark!</a>
				

				<address>
	        {{street}}<br />
	        {{postcode}} {{city}}, {{country}}
	      </address>
				<a href="" title="Send message" class="send_request">Send a SMS message</a>
	
      </div>
			
			<div class="right_column">
	      <h2>
	        {{title}}
        
	      </h2>
			
				<p>
					{{description}}
					<br>
<iframe src="http://www.facebook.com/plugins/like.php?href=http%3A%2F%2Fexample.com%2Fpage%2Fto%2Flike&amp;layout=standard&amp;show_faces=true&amp;width=495&amp;action=like&amp;font=lucida+grande&amp;colorscheme=light&amp;height=24" scrolling="no" frameborder="0" style="text-align:right;border:none; overflow:hidden; width:495px; height:24px;margin-top:12px;" allowTransparency="true"></iframe>
				</p>
				
				<ul>
					<li class="item">
						Price: {{price}}
					</li> 
					<li class="item">
						Number of Rooms: {{number_of_rooms}}
					</li>
					<li class="item">
						Date of Availability: {{date_of_availability}} 
					</li>
					<li class="item">
						Size: {{size}}
					</li>
					<li class="item">
						Duration: {{duration}}
					</li>
				</ul>
				
			</div>


    </div>
    
    <div id="contact_request" style="display: none;">
      {{#has_phone}}
        <p>Phone: {{phone}}</p>
      {{/has_phone}}
      
      {{#has_email}}
        <form method="POST" action="/messages">
          <input type="hidden" name="apartment_id" value="{{_id}}" />
          <p>
            <label for="message">Message</label>
            <textarea name="message" id="message"></textarea>
          </p>
        
          <p>
            <input type="submit" value="Send request" />
          </p>
        </form>
      {{/has_email}}
      
      <p>
        <a href="#" class="close_request">Close request</a>
      </p>
    </div>
	</div>
</div>