<div id="details_centering">
	<div id="details_rightflow">
		<div id="details">
		
			<div class="thumbs">
        {{#images}}
          <img src="{{middle}}" />
        {{/images}}
      </div>

      <h2>
        {{title}}
        
      </h2>
			
			<p>
				{{description}}
			</p>
			
			<address>
        {{street}}<br />
        {{postcode}} {{city}}, {{country}}
      </address>
			
			<ul>
				<li class="item">
					Price: {{price}}
				</li> 
				<li class="item">
					Number of Rooms: {{number_of_rooms}}
				</li>
				<li class="item">
					Date of Availability: {{date_of_availability}} 
				</li>
				<li class="item">
					Size: {{size}}
				</li>
				<li class="item">
					Duration: {{duration}}
				</li>
			</ul>


      <p>
        <a href="#" class="send_request">Send request</a>
        <a href="#" class="remember_this">Remember this</a>
      </p>
    </div>
    
    <div id="contact_request" style="display: none;">
      {{#has_phone}}
        <p>Phone: {{phone}}</p>
      {{/has_phone}}
      
      {{#has_email}}
        <form method="POST" action="/contact_requests">
          <p>
            <label for="message">Message</label>
            <textarea name="message" id="message"></textarea>
          </p>
        
          <p>
            <input type="submit" value="Send request" />
          </p>
        </form>
      {{/has_email}}
      
      <p>
        <a href="#" class="close_request">Close request</a>
      </p>
    </div>
	</div>
</div>